@model class_designation
<h1>Create Designation</h1>
@if (!ViewData.ModelState.IsValid) {
    <div class="alert alert-danger">
        @Html.ValidationSummary(false, "Please fix the following errors:")
    </div>
}
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="DesignationName">Designation Name</label>
        <input type="text" id="DesignationName" name="DesignationName" class="form-control" value="@Model.DesignationName" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" id="Description" name="Description" class="form-control" value="@Model.Description" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
