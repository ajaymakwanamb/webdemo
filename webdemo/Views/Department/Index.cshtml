@model System.Data.DataTable

@{
    ViewData["Title"] = "Department List";
}

<h1>Department List</h1>

@if (Model != null && Model.Rows.Count > 0) {
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                @foreach (System.Data.DataColumn column in Model.Columns) {
                    <th>@column.ColumnName</th>
                }
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model.Rows) {
                <tr>
                    @foreach (var item in row.ItemArray) {
                        <td>@item</td>
                    }
                    <td>
                        <a asp-action="Details" asp-route-id="@row["DepartmentId"]" class="btn btn-primary btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@row["DepartmentId"]" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@row["DepartmentId"]" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <div class="alert alert-warning">
        <p>No department found.</p>
    </div>
}

<a asp-action="Create" class="btn btn-success">Add New Department</a>
